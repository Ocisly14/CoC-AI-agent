{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "outputs": ["dist/**"],
      "inputs": ["src/**/*.ts", "src/**/*.js", "tsconfig.json"]
    },
    "build:swc": {
      "outputs": ["dist/**"],
      "inputs": ["src/**/*.ts", "src/**/*.js"]
    },
    "build:tsc": {
      "outputs": ["dist/**"], 
      "inputs": ["src/**/*.ts", "src/**/*.js", "tsconfig.json"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "inputs": ["src/**/*.ts", "src/**/*.js", "biome.json"]
    },
    "format": {
      "inputs": ["src/**/*.ts", "src/**/*.js", "client/**/*.ts", "biome.json"],
      "outputs": []
    },
    "check": {
      "inputs": ["src/**/*.ts", "src/**/*.js", "client/**/*.ts", "biome.json"]
    },
    "test": {
      "outputs": ["coverage/**"],
      "inputs": ["src/**/*.ts", "vitest.config.ts"]
    },
    "clean": {
      "cache": false
    }
  }
}
